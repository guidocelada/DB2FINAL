<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>

	<class name="com.lifia.bd2.model.Application">
        <id name="id" column="application_id" access="field">
        	<generator class="native"/>
        </id>
        <set name="carts" cascade="all" >
	    	<key column="application_id" />
	    	<one-to-many class="com.lifia.bd2.model.Cart" />
	    </set>
    </class>
    
    <class name="com.lifia.bd2.model.Cart">
        <id name="id" column="cart_id" access="field">
        	<generator class="native"/>
        </id>
        <property name="user" />
        <set name="products" cascade="all">
        	<key column="cart_id"/>
	    	<one-to-many class="com.lifia.bd2.model.Product" />
		</set>
    </class>
    
    <class name="com.lifia.bd2.model.Product">
        <id name="id" column="product_internal_id" access="field"> <!-- autoincremental internal id -->
        	<generator class="native"/>
        </id>
        <property name="productId" /> <!-- the id that a site provides -->
        <property name="quantity" />
    </class>
    
</hibernate-mapping>